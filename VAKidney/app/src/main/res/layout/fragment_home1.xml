<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.topcoder.vakidney.fragments.home.Home1Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_above="@+id/bottom"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/app_standard_padding"
            android:id="@+id/arcLayout1"
            android:gravity="center"
            android:orientation="vertical">


            <com.topcoder.vakidney.customview.ArcProgress
                android:id="@+id/arcProgress1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                custom:arc_bottom_text=""
                custom:arc_finished_color="#f3cf45"
                custom:arc_progress="55"
                custom:arc_text_color="@color/colorWhite"
                custom:arc_unfinished_color="@color/colorWhite"
                custom:icon_color="@color/colorWhite"
                custom:inside_drawable="@drawable/ic_weight_loss" />

            <TextView
                android:id="@+id/arcProgressText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Weight Loss"
                android:lines="1"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="-12dp"
                android:layout_marginBottom="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tvStat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="5/12"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUnit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="lbs"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/arcLayout2"
            android:layout_marginBottom="@dimen/app_standard_padding">
            <com.topcoder.vakidney.customview.ArcProgress
                android:id="@+id/arcProgress2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/app_standard_padding"
                custom:inside_drawable="@drawable/ic_water_bottle"
                custom:arc_bottom_text=""
                custom:icon_color="@color/colorWhite"
                custom:arc_unfinished_color="@color/colorWhite"
                custom:arc_finished_color="#bec292"
                custom:arc_text_color="@color/colorWhite"
                custom:arc_progress="55" />

            <TextView
                android:id="@+id/arcProgressText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Water Intake"
                android:lines="1"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="-12dp"
                android:layout_marginBottom="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/app_standard_padding"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tvStat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="6/8"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUnit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="glasses"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp" />


            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/arcLayout4"
                android:layout_marginTop="@dimen/app_standard_padding">

            <com.topcoder.vakidney.customview.ArcProgress
                android:id="@+id/arcProgress4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                custom:inside_drawable="@drawable/ic_running"
                custom:arc_bottom_text=""
                custom:icon_color="@color/colorWhite"
                custom:arc_finished_color="#ff7f32"
                custom:arc_unfinished_color="@color/colorWhite"
                custom:arc_text_color="@color/colorWhite"
                custom:arc_progress="55" />

                <TextView
                    android:id="@+id/arcProgressText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Run"
                    android:lines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="-12dp"
                    android:layout_marginBottom="1dp"/>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tvStat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="4.7/6.2"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUnit4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="miles"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp" />


            </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/arcLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/app_standard_padding"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.topcoder.vakidney.customview.ArcProgress
                android:id="@+id/arcProgress3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/app_standard_padding"
                custom:arc_finished_color="#557630"
                custom:arc_progress="55"
                custom:arc_text_color="@color/colorWhite"
                app:arc_bottom_text=""
                custom:arc_unfinished_color="@color/colorWhite"
                custom:icon_color="@color/colorWhite"
                custom:inside_drawable="@drawable/ic_fruits_veggies" />

            <TextView
                android:id="@+id/arcProgressText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fruits/Veggies"
                android:lines="1"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="-12dp"
                android:layout_marginBottom="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_standard_padding"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStat3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2/3"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUnit3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:text="bowls"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="40dp"
        android:paddingBottom="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Welcome,"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/app_standard_padding"
                android:layout_weight="1"
                android:textColor="@color/colorDarkGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have"
                android:layout_gravity="center_vertical"
                android:paddingRight="70dp"
                android:textSize="14sp"
                android:textColor="@color/colorDarkGray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_marginRight="-20dp">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:lines="1"
                    android:textSize="16sp"
                    android:text="John Smith"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/standard_padding_half"
                    android:layout_marginEnd="@dimen/app_standard_padding"/>
            </FrameLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:rotation="180"
                android:tint="@color/colorPrimary"
                android:src="@drawable/bg_triangle">
            </ImageView>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:tint="@color/colorAccent"
                android:src="@drawable/bg_triangle">
            </ImageView>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-20dp"
                android:background="@color/colorAccent">
                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:textSize="16sp"
                    android:text="120 Points"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
</layout>