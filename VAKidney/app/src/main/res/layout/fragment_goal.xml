<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    android:paddingLeft="@dimen/app_standard_padding"
    android:paddingRight="@dimen/app_standard_padding"
    tools:context="com.topcoder.vakidney.MainFragments.FoodFragment">

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="@dimen/app_standard_padding"
        android:paddingBottom="@dimen/app_standard_padding"
        android:paddingTop="@dimen/app_standard_padding"
        android:clipToPadding="false"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/app_standard_padding"/>

</RelativeLayout>
