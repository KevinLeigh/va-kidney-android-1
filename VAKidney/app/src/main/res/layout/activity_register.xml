<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
        tools:context="com.topcoder.vakidney.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="30dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="20dp"
                android:padding="3dp"
                android:scaleType="fitCenter"
                android:tint="@color/colorWhite"
                app:srcCompat="@drawable/logo_primary" />

            <RelativeLayout
                android:id="@+id/emailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_login_field_normal"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/emailicon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="@color/brandBlue"
                    app:srcCompat="@drawable/ic_email" />

                <EditText
                    android:id="@+id/emailField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/emailicon"
                    android:background="@android:color/transparent"
                    android:hint="EMAIL"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/emailErrorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/error_email"
                android:textColor="#ff7f32"
                android:textSize="15dp"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_login_field_normal"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/passwordIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="@color/brandBlue"
                    app:srcCompat="@drawable/ic_password" />

                <EditText
                    android:id="@+id/passwordField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/passwordIcon"
                    android:background="@android:color/transparent"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/passwordErrorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/error_password"
                android:textColor="#ff7f32"
                android:textSize="15dp"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/confirmLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_login_field_normal"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/confirmIcon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:tint="@color/brandBlue"
                    app:srcCompat="@drawable/ic_password" />

                <EditText
                    android:id="@+id/confirmField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/confirmIcon"
                    android:background="@android:color/transparent"
                    android:hint="CONFIRM PASSWORD"
                    android:inputType="textPassword"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/confirmErrorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/error_password"
                android:textColor="#ff7f32"
                android:textSize="15dp"
                android:visibility="gone" />


            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_login_btn"
                android:elevation="5dp"
                android:text="Register"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />


            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_signup_btn"
                android:elevation="5dp"
                android:text="Already Registered? Log In Now"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>
</layout>