<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_top_round_white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/app_standard_padding">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="eGFR"
                android:textColor="@color/colorDarkGray"
                android:textSize="16dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgStanding"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="4dp"
                app:srcCompat="@drawable/ic_good" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imgTrend"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@android:color/holo_red_dark"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_arrow_down" />

                <TextView
                    android:id="@+id/tvCurrentvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="110"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_standard_padding"
                    android:gravity="center"
                    android:text="mL/min"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="14dp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_round_primary"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/app_standard_padding">


            <TextView
                android:id="@+id/tvSuggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Suggestion"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorWhite" />


            <TextView
                android:id="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add Data"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>